<?xml version="1.0"?>
<robot name="cube">

  <material name="pole_colour">
    <color rgba="0.0 1.0 1.0 1.0"/>
  </material>

  <link name="base_link">
    <!-- <collision> -->
    <!--   <geometry> -->
    <!--     <box size="0 0 0"/> -->
    <!--   </geometry> -->
    <!-- </collision> -->
    <inertial>
      <mass value="0.001"/>
    	<inertia ixx="0.0" ixy="0.0" ixz="0.0" iyy="0.0" iyz="0.0" izz="0.0"/>
  	</inertial>
    <visual>
      <geometry>
        <box size="0 0 0"/>
      </geometry>
    </visual>
  </link>

  <link name="pole_link">
    <collision>
      <geometry>
        <cylinder radius="0.005" length="1.0"/>
      </geometry>
    </collision>
    <inertial>
      <mass value="0.2"/>
    	<inertia ixx="0.016668" ixy="0.0" ixz="0.0" iyy="0.016668" iyz="0.0" izz="0.000002"/>
  	</inertial>
    <visual>
      <geometry>
        <cylinder radius="0.005" length="1.0"/>
      </geometry>
      <material name="pole_colour"/>
    </visual>
  </link>

  <joint name="base_to_pole" type="fixed">
    <parent link="base_link"/>
    <child link="pole_link"/>
    <origin xyz="0.0 0.0 -0.5"/>
  </joint>
</robot>
